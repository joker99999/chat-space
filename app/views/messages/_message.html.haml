.main-chat__message__list
  .main-chat__message__list__box
    .main-chat__message__list__box__name
      = message.user.name
    .main-chat__message__list__box__day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message__list__messages
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?

